---
export interface Props {
  title: string;
  img: string;       // Unsplash URL
}
const { title, img } = Astro.props;
---
<div
  class="group relative h-48 md:h-56 rounded-lg overflow-hidden shadow-lg"
>
  <img
    src={img}
    alt={title}
    class="h-full w-full object-cover transform group-hover:scale-110 transition duration-500"
    loading="lazy"
  />
  <div
    class="absolute inset-0 bg-black/70 grid place-items-center
           text-white text-lg md:text-xl font-heading tracking-wide
           group-hover:bg-black/40 transition duration-500"
  >
    {title}
  </div>
</div>
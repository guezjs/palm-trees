---
export interface Props {
    images: string[];
    heading?: string;
}

const { images, heading = 'Previous Work' } = Astro.props;
---

<section class="px-6 py-16" id="work" data-aos="fade-up">
    <h3 class="font-heading text-2xl mb-8">{heading}</h3>

    <div class="grid gap-4 md:grid-cols-2">
        {
            images.map((src, i) => (
                <button
                    onclick={`openLightbox(${i})`}
                    class="h-40 md:h-48 rounded-lg overflow-hidden shadow"
                >
                    <img
                        src={src}
                        alt="Project photo"
                        class="h-full w-full object-cover"
                        loading="lazy"
                        data-gallery-img
                    />
                </button>
            ))
        }
    </div>
</section>
